<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeeOpen.Views.Register">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="CenterAndExpand">
            <Label Text="Προσθήκη Νέου Χρήστη"></Label>
            <Entry x:Name="username" Placeholder="Όνομα Χρήστη"></Entry>
            <Entry x:Name="password" IsPassword="True" Placeholder="Κωδικός Πρόσβασης"></Entry>
            <Entry x:Name="repassword" IsPassword="True" Placeholder="Επανάληψη Εισαγωγής"></Entry>
            <Entry x:Name="email" Placeholder="E-mail"></Entry>
            <Entry x:Name="afm" Placeholder="ΑΦΜ"></Entry>
            <Picker x:Name="mun"></Picker>
            <Button x:Name="register" Text="Εγγραφή" Clicked="Register_OnClicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>