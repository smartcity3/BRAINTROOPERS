<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MayorClass.Reg" BackgroundColor="#1c6e8c">
    <ContentPage.Content>
        <ScrollView>
       
        <StackLayout VerticalOptions="CenterAndExpand"  HorizontalOptions="FillAndExpand" Padding="30">
             <Image x:Name="Image" Source="logowhite.png"></Image>   
            <Entry Placeholder="Όνομα" x:Name="name" PlaceholderColor="#fbfcff" TextColor="#fbfcff"></Entry>
            <Entry Placeholder="Επώνυμο" x:Name="surname" PlaceholderColor="#fbfcff" TextColor="#fbfcff"></Entry>
            <Entry Placeholder="Email" x:Name="email" PlaceholderColor="#fbfcff" TextColor="#fbfcff"></Entry>
            <Entry Placeholder="ΑΦΜ" x:Name="afm" PlaceholderColor="#fbfcff" TextColor="#fbfcff"></Entry>
           <Entry Placeholder="Κωδικός" x:Name="password" IsPassword="True" PlaceholderColor="#fbfcff" TextColor="#fbfcff"></Entry>
           <Entry Placeholder="Επιβαιβέωση Κωδικού" x:Name="password2" IsPassword="True" PlaceholderColor="#fbfcff" TextColor="#fbfcff"></Entry>
            <Button VerticalOptions="End" x:Name="register" Text="Εγγραφή" Clicked="Register_OnClicked" BackgroundColor="#fbfcff" TextColor="#1c6e8c"></Button>
        </StackLayout>
        
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
