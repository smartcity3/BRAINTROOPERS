<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MayorClass.Reg">
    <ContentPage.Content>
        
        <StackLayout  VerticalOptions="StartAndExpand">
            <Label TextColor="Red" HorizontalOptions="Center" x:Name="error"></Label>
            <Label TextColor="Black" HorizontalOptions="Center" x:Name="ok"></Label>
            <Entry Placeholder="Name" x:Name="name"></Entry>
            <Entry Placeholder="Surname" x:Name="surname"></Entry>
            <Entry Placeholder="Email" x:Name="email"></Entry>
            <Entry Placeholder="Afm" x:Name="afm"></Entry>
           <Entry Placeholder="Password" x:Name="password" IsPassword="True"></Entry>
           <Entry Placeholder="Password confirm" x:Name="password2" IsPassword="True"></Entry>
            <Button VerticalOptions="End" x:Name="register" Text="Register" Clicked="Register_OnClicked"></Button>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>
